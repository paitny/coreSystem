.img {
  width: 100%;
  height: 390rpx;
  background-size: 100% 100%;
  position: absolute;
}
.img .frame {
  height: 310rpx;
  width: 93%;
  background-color: white;
  border-radius: 10rpx;
  margin: auto;
  margin-top: 40rpx;
  box-shadow: 0px 3px 7px 0px #e5e5e5;
}
.img .frame .informate {
  height: 71%;
  width: 100%;
  border-bottom: 1rpx dashed darkgrey;
}
.img .frame .informate .logo {
  height: 110rpx;
  width: 110rpx;
  background-size: 100% 100%;
  margin-top: -120rpx;
  margin-left: 530rpx;
  border-radius: 15rpx;
}
.img .frame .card {
  height: 29%;
  width: 100%;
}
.img .frame .card .cardimg {
  height: 50rpx;
  width: 50rpx;
  margin-left: 580rpx;
  margin-top: -39rpx;
  background-size: 100% 100%;
}
.contact {
  height: 420rpx;
  width: 100%;
  background-color: white;
  padding-top: 390rpx;
}
.contact .manner {
  height: 350rpx;
  width: 87%;
  margin: 20rpx auto;
}
.contact .manner .all-list {
  width: 100%;
  height: 115rpx;
  margin: 0 auto;
}
.contact .manner .all-list .text {
  color: #000;
  font-size: 30rpx;
}
.about {
  height: 500rpx;
  width: 100%;
  margin-top: 20rpx;
  background-color: white;
}
.about .content {
  height: 395rpx;
  width: 87%;
  margin: 0 auto;
  font-size: 31rpx;
}
.bottom-button {
  display: flex;
  justify-content: space-around;
  padding-top: 10rpx;
  position: fixed;
  width: 100%;
  bottom: 0;
  background-color: #fff;
}
.bottom-button .left {
  display: flex;
  width: 40%;
  justify-content: center;
}
.bottom-button .left .share {
  width: 120rpx;
  height: 100rpx;
  font-size: 20rpx;
  text-align: center;
}
.bottom-button .left .share button::after {
  border: none;
  width: 57rpx;
  height: 57rpx;
}
.bottom-button .left .share image {
  width: 57rpx;
  height: 57rpx;
}
.bottom-button .left .gohome {
  font-size: 20rpx;
  width: 120rpx;
  height: 100rpx;
  text-align: center;
}
.bottom-button .left .gohome image {
  width: 57rpx;
  height: 57rpx;
}
.bottom-button .right {
  width: 60%;
}
.bottom-button .right .like {
  background-color: #4d6398;
  border-radius: 45rpx;
}