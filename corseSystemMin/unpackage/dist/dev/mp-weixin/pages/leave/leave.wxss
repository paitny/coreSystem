.container {
  width: 100%;
}
.container .nodata {
  height: 500rpx;
  text-align: center;
  line-height: 500rpx;
}
.container .notice_msg {
  width: 100%;
  height: 500rpx;
  background-image: url("https://wypty.cn/static/file/material/trends.png");
  padding-top: 30rpx;
  background-size: 100% 100%;
}
.container .notice_msg .search {
  height: 80rpx;
  width: 79%;
  border-radius: 50rpx;
  margin: 0 auto;
  background-color: white;
  background-repeat: no-repeat;
  padding-left: 3em;
  background-size: 8% 60%;
  background-position: 20rpx;
}
.container .notice_msg .notice-container {
  height: 250rpx;
  /* 设置一个固定高度 */
  overflow-y: auto;
  /* 添加垂直滚动条 */
  border: 1px solid #5bbfcb;
  /* 可选，添加边框以便于查看 */
  padding: 10px;
  /* 可选，内边距 */
  border-radius: 10rpx;
}
.container .notice_msg .notice {
  background-image: url("https://wypty.cn/static/file/material/leavebg.png");
  background-size: 100% 100%;
  background-repeat: no-repeat;
  width: 86%;
  margin: 20rpx auto;
  border-radius: 25rpx;
  height: 400rpx;
  padding: 20rpx;
}
.container .notice_msg .notice .title {
  text-align: center;
}
.container .notice_msg .notice text {
  margin: 0 auto;
  padding-left: 2em;
}
.container .notice_msg .notice .title {
  padding-left: 0em;
  margin: 0 auto;
  font-size: 40rpx;
  font-weight: bold;
  font-style: italic;
  line-height: 100rpx;
}
.container .notice_msg .img {
  width: 20rpx;
  height: 20rpx;
}
.container .leave_list {
  height: 80rpx;
  margin-bottom: 50rpx;
}
.container .leave_list .leave_tab {
  display: flex;
  margin: 10rpx;
  display: inline-block;
  padding: 10rpx 30rpx;
  font-size: 36rpx;
}
.container .leave_list .leave_tab .f-color {
  color: #878b99;
  font-size: 30rpx;
}
.container .leave_list .leave_tab .f-active-color {
  color: #4d6398;
  padding: 10rpx 0;
  font-size: 40rpx;
  font-weight: bold;
  border-bottom: 6rpx solid #4d6398;
}
.container .leave_list .send_msg {
  float: right;
  margin-right: 30rpx;
  padding: 0;
  margin-top: 22rpx;
  color: #fff;
  padding: 14rpx 20rpx;
  background-color: #4d6398;
  border-radius: 10rpx;
}
.container .leave {
  clear: both;
  width: 100%;
  background-color: #fff;
  border-bottom: 2rpx dashed gray;
}
.container .leave .leave_item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
}
.container .leave .leave_item .head_img {
  background-color: #878b99;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-left: 20rpx;
  display: flex;
}
.container .leave .leave_item .head_img .hImg {
  width: 80rpx;
  height: 80rpx;
}
.container .leave .leave_item .right {
  width: 100%;
  margin-left: 20rpx;
}
.container .leave .leave_item .right .top {
  width: 100%;
}
.container .leave .leave_item .right .top text {
  line-height: 60rpx;
}
.container .leave .leave_item .right .top .leave_user,
.container .leave .leave_item .right .top .leave_content {
  font-size: 30rpx;
  width: 84%;
  padding-top: 15rpx;
}
.container .leave .leave_item .right .top .leave_type {
  color: #ec5a33;
  padding-top: 10rpx;
}
.container .leave .leave_item .right .top .leave_time {
  font-size: 24rpx;
  color: #878b99;
  line-height: 30rpx;
}
.container .leave .leave_item .right .leave_img {
  width: 84%;
  height: 130rpx;
  display: flex;
  margin-top: 20rpx;
  justify-content: space-between;
}
.container .leave .leave_item .right .leave_img .img {
  width: 160rpx;
  height: 160rpx;
}
.container .leave .leaveFunction {
  display: flex;
  justify-content: flex-end;
  padding: 10rpx;
  align-items: center;
  margin-top: 40rpx;
}
.container .leave .leaveFunction .reply {
  margin-right: 70rpx;
}
.container .leave .leaveFunction .reply image {
  width: 50rpx;
  height: 50rpx;
}
.container .leave .leaveFunction .like {
  margin-right: 40rpx;
}
.container .leave .leaveFunction .like image {
  width: 55rpx;
  height: 55rpx;
}
.container .leave .nickNameLikes {
  font-size: 22rpx;
  padding: 20rpx 20rpx 20rpx 45rpx;
}
.barrage-box {
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
}
.barrage-item {
  position: absolute;
  white-space: nowrap;
  font-size: 16px;
  font-weight: bold;
  animation: barrage-animation linear infinite;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
}
@keyframes barrage-animation {
0% {
    transform: translateX(100%);
    /* 从右侧开始 */
}
100% {
    transform: translateX(-100%);
    /* 到达左侧 */
}
}