swiper {
  width: 100%;
}
swiper-item .intro {
  width: 90%;
  height: 90%;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 25rpx;
  text-align: center;
}
swiper-item .intro .img {
  width: 100%;
  height: 40%;
}
swiper-item .intro .img .sign {
  position: relative;
  top: 80rpx;
  left: -10rpx;
  width: 260rpx;
  height: 0;
  background-color: #39b5fd;
  border: 40rpx solid #39b5fd;
  border-right-color: #fff;
}
swiper-item .intro .img .sign .position {
  position: relative;
  left: -50rpx;
  top: -26rpx;
  font-size: 40rpx;
  color: #fff;
}
swiper-item .intro .img .head_img {
  width: 300rpx;
  height: 300rpx;
  margin: 150rpx 0 30rpx 0;
  box-shadow: 0 0 10px 5px #40aff7;
  border-radius: 50%;
}
swiper-item .intro .basic {
  margin-top: 50rpx;
  height: 24%;
}
swiper-item .intro .basic .name,
swiper-item .intro .basic .ename {
  line-height: 100rpx;
  font-size: 80rpx;
  font-weight: bold;
  color: #39b5fd;
}
swiper-item .intro .basic .ename {
  font-size: 40rpx;
  margin: 150rpx 0;
}
swiper-item .intro .bottom {
  padding-top: 50rpx;
  height: 36%;
  background-color: #39b5fd;
  color: #fff;
  font-size: 40rpx;
  border-radius: 0 0 25rpx 25rpx;
}