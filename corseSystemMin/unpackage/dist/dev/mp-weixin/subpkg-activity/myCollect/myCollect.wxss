.information {
  width: 100%;
  height: 1213rpx;
  background-color: #fff;
}
.information .noData image {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.information .scroll-content {
  width: 100%;
  height: 1207rpx;
}
.information .scroll-content .scroll-item {
  width: 100%;
}
.information .scroll-content .scroll-item .all-list {
  height: 100%;
  width: 90%;
  height: 200rpx;
  margin: 0 auto;
  border-bottom: 1rpx solid #E6E6E6;
}
.information .scroll-content .scroll-item .all-list .all-list-content {
  float: left;
  width: 66%;
  overflow: hidden;
  height: 100%;
  color: #8a8a8a;
  font-size: 30rpx;
  line-height: 63rpx;
}
.information .scroll-content .scroll-item .all-list .all-list-content .des {
  height: 48rpx;
  width: 100%;
  font-size: 27rpx;
  overflow: hidden;
}
.information .scroll-content .scroll-item .all-list .all-list-content .title {
  color: #000;
  font-size: 37rpx;
  line-height: 67rpx;
  line-height: 79rpx;
}
.information .scroll-content .scroll-item .all-list .all-list-content .read {
  font-size: 24rpx;
}
.information .scroll-content .scroll-item .all-list .all-list-content .date {
  float: right;
  margin: 6rpx;
  font-size: 24rpx;
}
.information .scroll-content .scroll-item .all-list-img {
  float: right;
  width: 28%;
  height: 140rpx;
  margin: 30rpx 4rpx;
}