button::after {
  border-top: none;
  border-left: none;
  border-right: none;
  border-radius: 0;
}
.userinfo {
  font-size: 34rpx;
  font-weight: 400;
  color: #333333;
  height: 100%;
  position: relative;
}
.userinfo .form {
  background-color: #ffffff;
}
.userinfo .avatar-wrap {
  border: 0;
  background-color: #ffffff;
  height: 158rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
}
.userinfo .avatar-wrap .avatar {
  width: 80rpx;
  height: 80rpx;
  margin-right: 10rpx;
}
.userinfo .avatar-wrap .ipt {
  display: flex;
  align-items: center;
}
.userinfo .avatar-wrap .img {
  width: 118rpx;
  height: 118rpx;
  background-size: 100% 100%;
  background-repeat: no-repeat;
}
.userinfo .info_nickname {
  border-bottom: 1px solid #e9e9e9;
  height: 112rpx;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
}
.userinfo .info_nickname .nickname_right input {
  text-align: right;
}
.userinfo .info_nickname .gender {
  display: flex;
  align-items: center;
  justify-content: center;
}
.btn-wrap {
  margin-top: 20%;
  width: 100%;
  text-align: center;
}
.btn-wrap .btn {
  width: 690rpx;
  height: 88rpx;
}