
.container {
		padding: 20px;
}
.form {
		display: flex;
		flex-direction: column;
}
input {
		margin-bottom: 10px;
		padding: 10px;
		border: 1px solid #ccc;
		border-radius: 4px;
		margin-top: 10px;
}
button {
		padding: 10px;
		background-color: #007aff;
		color: white;
		border: none;
		border-radius: 4px;
		cursor: pointer;
}
button:active {
		background-color: #005ecb;
}
.result {
		margin-top: 20px;
}
.result text {
		display: block;
		margin-bottom: 5px;
}
