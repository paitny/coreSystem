.container {
  height: 1226rpx;
  display: flex;
  flex-direction: column;
}
text {
  color: #000;
  font-size: 30rpx;
  line-height: 60rpx;
}
input,
textarea,
button {
  margin: 30rpx;
  color: #000;
}
.uploadImage {
  display: flex;
  align-items: center;
}
.choosePhoto {
  background-image: url("data:image/png;base64,");
  background-size: 100% 100%;
  width: 180rpx;
  height: 180rpx;
  background-repeat: no-repeat;
  font-size: 30rpx;
  color: #cdcdcd;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.image-container {
  display: flex;
  height: 150rpx;
  width: 150rpx;
}
.image-preview {
  position: relative;
  margin-left: 20rpx;
}
.image-preview .deleteImage {
  width: 25rpx;
  height: 25rpx;
  border-radius: 50%;
  background: #ec5a33;
  color: #fff;
  font-size: 20rpx;
  text-align: center;
  line-height: 25rpx;
  position: absolute;
  right: -10rpx;
  top: -10rpx;
}
.image-container image {
  width: 140rpx;
  height: 140rpx;
}
.leave_type,
.contact {
  border-bottom: 1rpx solid #cdcdcd;
  padding: 20rpx;
}
.leave_content {
  width: 100%;
  padding: 20rpx;
  border-bottom: 1rpx solid #cdcdcd;
}
.contact {
  padding: 20rpx;
  clear: both;
  border-top: 1rpx solid #cdcdcd;
}
.submit_leave {
  width: 65%;
  background-color: #4d6398;
  color: #fff;
  border-radius: 50rpx;
  margin: 200rpx auto;
}